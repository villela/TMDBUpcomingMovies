<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/activityDetails_scroll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/activityDetailsImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/backdrop_height"/>

        <TextView
            android:id="@+id/activityDetailsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Interstellar"/>

        <TextView
            android:id="@+id/activityDetailsDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:padding="8dp"
            android:textSize="16sp"
            android:textStyle="italic"
            tools:text="Description blablablabla blablablabla blablablabla blablablabla blablablabla blablablabla blablablabla blablablabla"/>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/activityDetailsGenresFlex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            app:alignContent="stretch"
            app:alignItems="stretch"
            app:flexWrap="wrap"/>

        <TextView
            android:id="@+id/activityDetailsRelease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="2dp"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="14sp"
            android:textStyle="italic"
            tools:text="release date: 06/06/2666"/>
    </LinearLayout>
</ScrollView>